{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules",
        "email_report_templates",
        "build",
        "configs",
        "scripts",
        "webpack",
        "jest",
        "src/tests"
    ],
    "include": [
        "src/**/*"
    ]
}
